{
  "name": "ding",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter=@ding/api",
    "dev:web": "pnpm db:up && turbo build --filter=@ding/domain --filter=@ding/ui && turbo dev --filter=@ding/api --filter=@ding/web",
    "build": "turbo build",
    "build:api": "turbo build --filter=@ding/api",
    "build:web": "turbo build --filter=@ding/web",
    "build:desktop": "turbo build --filter=@ding/desktop",
    "deploy:api": "pnpm --filter @ding/api deploy",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f db",
    "db:push": "DATABASE_URL=http://127.0.0.1:8081 pnpm --filter @ding/database db:push",
    "db:push:remote": "export $(cat .env | xargs) && pnpm --filter @ding/database db:push",
    "db:studio": "DATABASE_URL=http://127.0.0.1:8081 pnpm --filter @ding/database db:studio",
    "db:clean": "docker compose down && rm -rf data/libsql data/libsql-test && docker compose up -d && pnpm db:push",
    "db:reset": "docker compose stop db && rm -rf data/libsql && docker compose up -d db && sleep 2 && pnpm db:push",
    "db:test:up": "docker compose up -d db-test",
    "db:test:down": "docker compose stop db-test",
    "db:test:push": "DATABASE_URL=http://127.0.0.1:8082 pnpm --filter @ding/database db:push",
    "db:test:reset": "docker compose stop db-test && rm -rf data/libsql-test && docker compose up -d db-test && sleep 2 && pnpm db:test:push",
    "test:integration": "pnpm db:test:up && pnpm db:test:push && pnpm --filter @ding/domain test:integration"
  },
  "devDependencies": {
    "@ding/config": "workspace:*",
    "@eslint/js": "^9.18.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "turbo": "^2.7.6",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.21.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": "10.26.1"
  },
  "packageManager": "pnpm@10.26.1"
}

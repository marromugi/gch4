{
  "name": "@ding/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./icon": {
      "types": "./dist/icon/index.d.ts",
      "import": "./dist/icon/index.js"
    },
    "./lib": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js"
    },
    "./styles/base.css": "./src/styles/base.css"
  },
  "scripts": {
    "build": "pnpm generate:icon && tsup",
    "dev": "tsup --watch",
    "generate:icon": "tsx script/iconGenerator/main.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "storybook": "storybook dev -p 6006",
    "build:storybook": "storybook build -o storybook-static"
  },
  "peerDependencies": {
    "motion": "catalog:",
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "motion": "catalog:",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.2.2",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@ding/config": "workspace:*",
    "@storybook/react": "^10.2.0",
    "@storybook/react-vite": "^10.2.0",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/react": "^16.3.2",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "jsdom": "^28.0.0",
    "storybook": "^10.2.0",
    "svgo": "^3.3.0",
    "tsup": "^8.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vite": "^6.4.1",
    "vitest": "^4.0.18"
  }
}

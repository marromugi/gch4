{
  "extends": "@ding/config/typescript/base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "types": ["node", "@cloudflare/workers-types"]
  },
  "include": ["src"],
  "exclude": [
    "src/routes/applications",
    "src/routes/jobs",
    "src/routes/review-policies",
    "src/routes/interview-feedbacks",
    "src/routes/extracted-fields",
    "src/routes/users/[userId]/jobs"
  ]
}

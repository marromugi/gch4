# Server
PORT=8080
NODE_ENV=development

# Better Auth
BETTER_AUTH_SECRET=your-secret-key-at-least-32-chars
BETTER_AUTH_URL=http://localhost:8080

# Database
# ローカル開発 (Docker sqld)
DATABASE_URL=http://127.0.0.1:8081
# 本番 (Turso)
# DATABASE_URL=libsql://your-database.turso.io
